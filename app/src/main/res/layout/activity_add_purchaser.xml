<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_purchaser"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="12dp"
    tools:context=".purchaser.ui.add.AddClientActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingHorizontal="10dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/add_purchaser_layout_input_first_name"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="@string/add_client_txt_enter_first_name_label"
            app:counterEnabled="true"
            app:counterMaxLength="64"
            app:helperText="@string/required_text">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/add_purchaser_input_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/add_purchaser_layout_input_last_name"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="@string/add_client_txt_enter_last_name_label"
            app:counterEnabled="true"
            app:counterMaxLength="64"
            app:helperText="обязательно для заполнения">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/add_purchaser_input_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/add_purchaser_layout_input_phone"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="@string/add_client_txt_enter_phone_label"
            app:counterEnabled="true"
            app:counterMaxLength="9"
            app:helperText="+375 291514801"
            app:prefixText="+375 ">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/add_purchaser_input_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/add_purchaser_btn_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:text="@string/add_client_btn_text"
            app:backgroundTint="@color/purple_lighten_2"
            app:icon="@drawable/ic_person_add_24"
            app:iconGravity="textStart"
            app:iconPadding="8dp" />
    </LinearLayout>
</LinearLayout>