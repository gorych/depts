<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/view_item_padding_horizontal"
    android:paddingEnd="@dimen/view_item_padding_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_columnWeight="0.8"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical">

        <TextView
            android:id="@+id/client_info_tv_debt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="google-sans-medium"
            android:paddingTop="@dimen/view_item_title_padding_top"
            android:paddingBottom="@dimen/view_item_title_padding_bottom"
            android:textColor="@color/white"
            android:textSize="@dimen/view_item_title_size" />

        <TextView
            android:id="@+id/client_info_tv_debt_creation_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textColor="@color/list_item_subtitle"
            android:textSize="@dimen/view_item_subtitle_size" />

        <TextView
            android:id="@+id/client_info_tv_debt_seller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:paddingBottom="@dimen/view_item_subtitle_padding_bottom"
            android:textColor="@color/list_item_subtitle"
            android:textSize="@dimen/view_item_subtitle_size" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="#40FFFFFF" />

</LinearLayout>
