<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/view_item_padding_horizontal"
    android:paddingEnd="@dimen/view_item_padding_horizontal">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="0.8"
            android:background="?attr/selectableItemBackground"
            android:orientation="vertical">

            <TextView
                android:id="@+id/all_goods_item_tv_barcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="google-sans-medium"
                android:maxLines="1"
                android:paddingTop="@dimen/view_item_title_padding_top"
                android:paddingBottom="@dimen/view_item_title_padding_bottom"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:textColor="@color/white"
                android:textSize="@dimen/view_item_title_size" />

            <TextView
                android:id="@+id/all_goods_item_tv_createdAt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="sans-serif"
                android:maxLines="1"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="@color/white"
                android:textSize="@dimen/view_item_subtitle_size" />

            <TextView
                android:id="@+id/all_goods_item_tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="sans-serif"
                android:maxLines="1"
                android:paddingBottom="@dimen/view_item_subtitle_padding_bottom"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="@color/white"
                android:textSize="@dimen/view_item_subtitle_size" />
        </LinearLayout>
    </GridLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/stroke_color" />

</LinearLayout>
