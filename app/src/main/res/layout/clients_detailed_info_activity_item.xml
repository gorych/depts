<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:paddingStart="@dimen/clients_page_mode_item_padding_horizontal"
    android:paddingEnd="@dimen/clients_page_mode_item_padding_horizontal">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="3"
        android:rowCount="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="0.8"
            android:orientation="vertical">

            <TextView
                android:id="@+id/debt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="google-sans-medium"
                android:paddingTop="@dimen/clients_page_mode_item_title_padding_top"
                android:paddingBottom="@dimen/clients_page_mode_item_title_padding_bottom"
                android:textColor="@color/white"
                android:textSize="@dimen/clients_page_mode_item_title_size" />

            <TextView
                android:id="@+id/debt_barcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textColor="@color/list_item_subtitle"
                android:textSize="@dimen/clients_page_mode_item_subtitle_size" />
            <TextView
                android:id="@+id/debt_creation_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:paddingBottom="@dimen/clients_page_mode_item_subtitle_padding_bottom"
                android:textColor="@color/list_item_subtitle"
                android:textSize="@dimen/clients_page_mode_item_subtitle_size" />
            <TextView
                android:id="@+id/debt_seller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:paddingBottom="@dimen/clients_page_mode_item_subtitle_padding_bottom"
                android:textColor="@color/list_item_subtitle"
                android:textSize="@dimen/clients_page_mode_item_subtitle_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="0.2"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/close_debt_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/teal_round_button"
                android:contentDescription="@string/clients_activity_create_new_receipt_tooltip_text"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_baseline_add_24"
                android:tooltipText="@string/clients_activity_create_new_receipt_tooltip_text" />
        </LinearLayout>
    </GridLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="#40FFFFFF" />

</LinearLayout>
