<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:paddingStart="@dimen/view_item_padding_horizontal"
    android:paddingEnd="@dimen/view_item_padding_horizontal">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="3"
        android:rowCount="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="0.8"
            android:orientation="vertical">

            <TextView
                android:id="@+id/all_clients_item_tv_full_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="google-sans-medium"
                android:paddingTop="@dimen/view_item_title_padding_top"
                android:paddingBottom="@dimen/view_item_title_padding_bottom"
                android:textColor="@color/white"
                android:textSize="@dimen/view_item_title_size" />

            <TextView
                android:id="@+id/all_clients_item_tv_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textColor="@color/list_item_subtitle"
                android:textSize="@dimen/view_item_subtitle_size" />

            <TextView
                android:id="@+id/all_clients_item_tv_debts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:paddingBottom="@dimen/view_item_subtitle_padding_bottom"
                android:textColor="@color/list_item_subtitle"
                android:textSize="@dimen/view_item_subtitle_size" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/all_clients_item_btn_create_receipt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="center"
            android:background="@drawable/teal_round_button"
            android:contentDescription="@string/clients_activity_create_new_receipt_tooltip_text"
            android:padding="10dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="12dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_add_debt_24"
            android:tooltipText="@string/clients_activity_create_new_receipt_tooltip_text" />
    </GridLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="#40FFFFFF" />

</LinearLayout>
